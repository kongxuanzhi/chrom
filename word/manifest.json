{
  "name": "word",
  "manifest_version": 2,
  "version": "2.1",
  "description": "learn english",
  "icons": {
    "16": "/images/logo.png",
    "128": "/images/logo.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "dist/js/background.js"
    ]
  },
  "permissions": [
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "",
    "default_icon": "/images/logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [
        "css/balloon.css"
      ],
      "js": [
        "dist/js/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
